<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="bai_admins_roles" >

  <delete id="delAdminsRoles" parameterClass="hashmap">
    delete from bai_admins_roles
    where 1=0
   	<dynamic prepend="or">
		<isNotEmpty prepend="AND" property="userIds">
			user_id in
			<iterate property="userIds" open="(" close=")" conjunction=",">
				#userIds[]:INTEGER# 
			</iterate>
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="roleIds">
			role_id in
			<iterate property="roleIds" open="(" close=")" conjunction=",">
				#roleIds[]:INTEGER# 
			</iterate>
		</isNotEmpty>
	</dynamic>
  </delete>
  
  <insert id="addAdminsRoles" parameterClass="com.baixc.ucenter.model.admin.AdminsRoles" >
    insert into bai_admins_roles
    <dynamic prepend="(" >
      <isNotNull prepend="," property="userId" >
        user_id
      </isNotNull>
      <isNotNull prepend="," property="roleId" >
        role_id
      </isNotNull>
      )
    </dynamic>
    values
    <dynamic prepend="(" >
      <isNotNull prepend="," property="userId" >
        #userId:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="roleId" >
        #roleId:INTEGER#
      </isNotNull>
      )
    </dynamic>
    <selectKey resultClass="java.lang.Integer" keyProperty="userId" >
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>

</sqlMap>